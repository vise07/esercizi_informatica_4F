import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {

        //creazione di una nuova lista
        ArrayList<Integer> arrayDiProva = new ArrayList<>();

        //metodo per aggiungere elementi nella lista aggiungendo una cella alla fine e mettendo dentro l'elemento
        arrayDiProva.add(10);
        arrayDiProva.add(20);
        arrayDiProva.add(30);

        //metodo per aggiungerre un elemento (alla cella num x si aggiunge l'elemento y, le altre celle vengono spostate verso la fine
        arrayDiProva.add(1, 57);

        //metodo per visualizzare gli elementi della lista con un for each
        System.out.println("La lista contiene 4 elementi");
        arrayDiProva.forEach(System.out::println);

        //metodo size che da la dimensione della lista
        System.out.println("Dimensione lista: " + arrayDiProva.size());

        //metodo get che da l'elemento della cella x
        System.out.println("Elemento in posizione 4: " + arrayDiProva.get(3));

        //metodo che rimuove la cella x
        arrayDiProva.remove(3);
        System.out.println("Elemento 4 cancellato");
        arrayDiProva.forEach(System.out::println);

        /*arrayDiProva.remove(arrayDiProva.getFirst());
        arrayDiProva.remove(arrayDiProva.getLast());*/

        //metodo che rimuove accorciando la dimensione della lista sottrandola a x, vengono cancellate le ultime x celle
        arrayDiProva.remove(arrayDiProva.size() - 2);
        System.out.println("Elementi rimasti");
        arrayDiProva.forEach(System.out::println);

        //metodo per verificare se la lista contiene un certo numero x
        if (arrayDiProva.contains(40)) {
            System.out.println("Il numero 40 è presente");
        } else {
            System.out.println("Non c'è");
        }
        //if else per dire se è presente o no

        //metodo che aggiunge un elemento alla prima cella
        arrayDiProva.addFirst(5);

        //metodo che aggiunge un elemeneto all'ultima cella
        arrayDiProva.addLast(34);

        System.out.println("Lista dopo aver inserito 2 nuovi numeri");
        arrayDiProva.forEach(System.out::println);

        //metodo per prendere l'elemento della prima cella
        System.out.println("Primo elemento della lista");
        System.out.println(arrayDiProva.getFirst());

        //metodo per prendere l'elemento dell'ultima cella
        System.out.println("Ultimo elemento della lista");
        System.out.println(arrayDiProva.getLast());

        //metodo che rimuove la prima cella della lista
        arrayDiProva.removeFirst();

        //metodo che rimuove l'ultima cella della lista
        arrayDiProva.removeLast();
        System.out.println("Lista dopo aver rimosso la prima e l'ultima cella della lista");
        arrayDiProva.forEach(System.out::println);

        //metodo che inverte l'intera lista
        System.out.println("Lista dopo averla invertita");
        System.out.println(arrayDiProva.reversed());

        //metodo che svuota tutta la lista
        arrayDiProva.clear();
        
        //metodo
        if(arrayDiProva.isEmpty()) {
            System.out.println("La lista ora è vuota");
        } else {
            System.out.println("La lista non e vuota");
        }

        //metodo
        //System.out.println(arrayDiProva.indexOf(2));

        //metodo
        //System.out.println(arrayDiProva.lastIndexOf(3));

        //metodo
        //arrayDiProva.set();

        //metodo
        //arrayDiProva.equals();
    }
}
