import veicolo.Veicolo;

import java.util.ArrayList;

public class Concessionaria {

    // Attributi
    private ArrayList<Veicolo> concessionaria = new ArrayList<>();
    private String nome;

    // Costruttore
    public Concessionaria(String nome) {
        concessionaria = new ArrayList<>();
        this.nome = nome;
    }

    // Getter e setter
    public ArrayList<Veicolo> getConcessionaria() {
        return concessionaria;
    }

    public void setConcessionaria(ArrayList<Veicolo> concessionaria) {
        this.concessionaria = concessionaria;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    // Metodo per aggiungere un veicolo nella concessionaria
    public void addVeicolo(Veicolo a) throws Exception {
        if(!concessionaria.contains(a)) {
            concessionaria.add(a);
        } else {
            throw new Exception("Il veicolo è già presente nella concessionaria.");
        }
    }

    // Metodo per rimuovere un veicolo dalla concessionaria
    public void removeVeicolo(Veicolo a) throws Exception {
        if(concessionaria.contains(a)) {
            concessionaria.remove(a);
        } else {
            throw new Exception("Il veicolo che vuoi rimuovere non è presente nella concessionaria.");
        }
    }

    // Metodo per visualizzare i veicoli della concessionaria
    public void stampaConcessionaria() {
        for (Veicolo a : concessionaria) {
            System.out.println(a);
        }
    }

    // Metodo che ritorna il numero di veicoli della concessionaria
    public int contNumConcessionaria() {
        return concessionaria.size();
    }
}
