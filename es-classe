import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner tastiera = new Scanner(System.in);

        final int MAXLIBRI = 3;
        int [] Mensola = new int [MAXLIBRI];


    }


}


enum Genere{
    ROMANZO,
    MANUALE,
    TRILLER
}

public class Libro {
    public String autore;
    public String titolo;
    final double COSTOPAGINA = 0.05;
    public int pagine;
    Genere tipo;
    public String formattaDati() {
        return String.format("Autore: %s Titolo: %s Prezzo libro %f Genere: %s", autore, titolo, COSTOPAGINA * pagine, tipo);
    }
}
