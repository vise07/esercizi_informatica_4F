public class Punto {
    private double x;
    private double y;

    //costruttore
    public Punto(double x, double y) {
        setX(x);
        setY(y);
    }

    //set e get X e Y
    public void setX(double x) {
        this.x = x;
    }
    public double getX() {
        return this.x;
    }
    public void setY(double y) {
        this.y = y;
    }
    public double getY() {
        return this.y;
    }

    //informazioni punto
    @Override
    public String toString() {
        return "X = " + getX() + " - Y = " + getY();
    }
}
