import java.lang.Math;
public class Segmento {
    private double lung;

    //costruttore
    public Segmento(Punto primo, Punto secondo) {
        this.lung = Math.sqrt(Math.pow(primo.getX() - secondo.getX(), 2) + Math.pow(primo.getY() - secondo.getY(), 2));
    }

    //informazioni segmento
    @Override
    public String toString() {
        return "lunghezza" + lung;
    }
}
